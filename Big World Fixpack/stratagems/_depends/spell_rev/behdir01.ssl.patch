+	Global("BeholderBehavior","LOCALS",1)
+          TargetBlock(PCsPreferringWeak)
+          TriggerBlock(Enemy|Disabled|MinorGlobe|ResistFire)
+THEN DO
+          Combine()
+          Action(Eyestalk,BEHOLDER_AGANNAZAR_SCORCHER,burning|100|50)
